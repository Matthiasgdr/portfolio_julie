section
    width 100%
    height 100vh
.first-page
    display flex
    align-items center
    justify-content center
    .me
        position relative
        display flex
        flex-direction: column
        align-items center
        h1 
            font-size: 40px
        h2 
            font-size: 20px
        .losange
            position absolute
            top 0
            left 0
            transform: translateY(-45%) translateX(-35%) rotate(45deg);
            transform-origin center;
            width 40vh
            height 40vh
            border 45px solid #1e1e1e