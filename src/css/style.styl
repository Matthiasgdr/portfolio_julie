section
    position relative
    width: 100%
    height 100vh
.first-page
    .background
        position absolute
        z-index -1
        width 100%
        height 100vh
        display flex
        justify-content center
        align-items center
        .losange
            width 25vw
            height 25vw
            border: 4vw #1e1e1e solid
            transform rotate(45deg)
            transform-origin center
    .me
        display flex
        flex-direction: column
        justify-content center
        align-items center
        width 100%
        height 100vh
        h1
            font-size: 40px
        h2
            font-size: 30px
        .seework
            transform: translateY(10vw)
            font-size: 20px
            display flex
            align-items center
            justify-content center
            flex-direction: column
            img 
                margin: 10px 0 0 0